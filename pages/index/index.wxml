<!--index.wxml-->
<view class="container">
  <view class="title">
    {{title}}
  </view>
  <view class="select">
    <view class="box">
      <view class="place"> {{current}}</view>
    </view>
    <view class="btns">
      <button class="mini_btn" type="primary" size="mini" data-status="{{btnName}}" bindtap="startOrEnd">{{btnName}}</button>
    </view>
  </view>
</view>