/**index.wxss**/
.container {
  padding: 0;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.title {
  font-weight: bold;
  text-align: center;
}

.select {
  /* padding-top: 50rpx; */
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.place {
  height: 80rpx;
  line-height: 80rpx;
  font-weight: bold;
  background: #fff;
  width: 61.8%;
  margin: 0 auto;
  border-radius: 8rpx;
  color: #F84730;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.box {
  width: 80%;
  /* margin: 30rpx 0; */
  padding: 60rpx 0;
  /* border: 1rpx solid #eee; */
  background: #EBEDF0;
  text-align: center;
  border-radius: 8rpx;
}

.btns {
  padding-top: 30rpx;
  display: flex;
  justify-content: center;
}