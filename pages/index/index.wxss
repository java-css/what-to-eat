/**index.wxss**/
.container {
  padding: 0;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.title {
  font-weight: bold;
  text-align: center;
  animation: shine 2s infinite;
  font-size: 28rpx;
  padding: 20rpx 16rpx;
  color: #1AAD19;
  border: 2rpx solid #ebedf0;
}

@keyframes shine {
  0% {
    box-shadow: 0 0 0 0 rgba(142, 215, 141, 0.4);
  }

  100% {
    box-shadow: 0 0 0 24rpx rgba(255, 255, 255, 0);
  }
}

.select {
  /* padding-top: 50rpx; */
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.place {
  height: 80rpx;
  line-height: 80rpx;
  font-weight: bold;
  background: #fff;
  width: 61.8%;
  margin: 0 auto;
  border-radius: 8rpx;
  color: #F84730;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.box {
  width: 80%;
  /* margin: 30rpx 0; */
  padding: 60rpx 0;
  /* border: 1rpx solid #eee; */
  background: #EBEDF0;
  text-align: center;
  border-radius: 8rpx;
}

.btns {
  padding-top: 30rpx;
  display: flex;
  justify-content: center;
}