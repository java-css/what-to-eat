<!--pages/list/list.wxml-->
<view class="container">
  <van-collapse accordion value="{{ activeName }}" bind:change="onChange">
    <van-collapse-item wx:for="{{list}}" wx:for-index="id" title="{{item.typeName}}" name="{{item.id}}">
      <view class="btns">
        <span data-id="{{item.id}}" bindtap="getItem"><van-icon name="smile-o" />随 机</span>
        <span data-id="{{item.id}}" bindtap="edit"><van-icon name="edit" />编 辑</span>
        <span wx:if="{{!item.noDel}}" data-pos="{{index}}" bindtap="del">
          <van-icon name="close" />删 除
        </span>
      </view>
    </van-collapse-item>
  </van-collapse>

  <van-button color='#1AAD19' plain block bindtap="add">
    <van-icon name="add-o" color='#1AAD19' size='20' />
  </van-button>

</view>