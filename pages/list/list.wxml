<!--pages/list/list.wxml-->
<view class="container">
  <van-collapse accordion value="{{ activeName }}" bind:change="onChange">
    <van-collapse-item wx:for="{{list}}" wx:for-index="id" title="{{item.typeName}}" name="{{item.id}}">
      <view class="btns">
        <block wx:for="{{btns}}" wx:for-item="btn">
          <span data-pos="{{index}}" data-id="{{item.id}}" bindtap="{{btn.handler}}">{{btn.name}}</span>
        </block>
      </view>
    </van-collapse-item>
  </van-collapse>

  <van-button color='#1AAD19' plain block bindtap="add">
    <van-icon name="add-o" color='#1AAD19' size='20' />
  </van-button>

</view>