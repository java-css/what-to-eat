/* pages/add/add.wxss */
page {
  --cell-vertical-padding: 36rpx;
}

.container {
  overflow-y: scroll;
  margin: 0 20rpx;
  padding: 30rpx 0;
}

.user_cell {
  background: #eee !important;
  margin-bottom: 16rpx;
  border-radius: 10rpx;
}

.left_padding {
  padding-left: 20px;
}

input {
  font-size: 32rpx;
}

.van-icon-close {
  animation: rotate90 0.5s;
}

.van-icon-close:active {
  animation: none;
}

@keyframes rotate90 {
  from {
    transform: rotate(0);
  }

  to {
    transform: rotate(90deg);
  }
}